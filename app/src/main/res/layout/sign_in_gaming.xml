<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gaming_bg"
    android:padding="16dp">

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/arrow_backward_circle_fill"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/bird"
        android:layout_marginTop="-200dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="292dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="Gaming"
            android:textColor="#fff"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Create an accaunt to run wild through our curated experiences."
            android:textColor="#fff"
            android:textSize="11sp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="@color/white"
            android:background="@drawable/line"
            android:paddingBottom="15dp"
            android:layout_gravity="center"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#33FFFFFF"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:padding="15dp"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="sign in with facebook"
            android:textColor="#fff"
            android:textSize="17sp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            app:cornerRadius="40dp"
            app:icon="@drawable/facebook"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="Continue with Apple"
            android:textColor="#fff"
            android:textSize="17sp"
            app:strokeWidth="2dp"
            app:cornerRadius="40dp"
            app:icon="@drawable/apple_logo_black"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="@color/white"
            android:backgroundTint="#33FFFFFF"
            app:strokeColor="#fff"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/envelope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="Sign in with phone"
            android:textColor="#fff"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/phone"
            app:iconGravity="start"
            android:backgroundTint="#33FFFFFF"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Forgot your password?"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:background="@drawable/line"
                android:paddingBottom="15dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>