<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/woman" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Skip"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textColor="@color/black"
        android:layout_gravity="right"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="Explore Together"
            android:textColor="#CC000000"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Create an accaunt to run wild through our curated experiences."
            android:textColor="#CC000000"
            android:textSize="16sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:backgroundTint="#99FFFFFF"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/google_logo"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:backgroundTint="#99FFFFFF"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="Continue with Apple"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/apple_logo_black"
            app:iconGravity="start"
            app:iconSize="16sp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/envelope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:backgroundTint="#99FFFFFF"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:text="Continue with Email"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/envelope_ic"
            app:iconGravity="start"
            app:iconTint="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an accaunt? "
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Log in."
                android:fontFamily="@font/sf_pro_text_semibold"
                android:background="@drawable/shape"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>